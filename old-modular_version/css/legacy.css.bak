/* ===== LAYOUT MANAGER STYLES ===== */
/* Container styles */
.layout-container {
    position: relative !important;
    min-height: 100px;
    box-sizing: border-box;
    transform: none !important;
}

/* Make sure fullscreen containers are properly positioned */
.layout-container.fullscreen,
.layout-container[fullscreen],
.projection-overlay.layout-container {
    position: fixed !important;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9000;
}

/* Base styles for draggable elements - always active */
.draggable {
    position: absolute !important;
    z-index: 10000; /* Make sure draggables are always on top */
    background: rgba(30, 30, 40, 0.8);
    border: 1px solid #444;
    border-radius: 5px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    box-sizing: border-box;
    padding: 0 !important;
    margin: 0 !important;
    transform: none !important;
    transition: box-shadow 0.3s;
    min-width: 100px;
    min-height: 100px;
    touch-action: none; /* Prevent touch scrolling during drag */
    will-change: left, top; /* Optimize for animation */
    overflow: visible !important; /* Ensure drag handle is visible */
}

/* Style for dragging state */
.draggable.dragging {
    z-index: 10001; /* Even higher z-index when dragging */
    opacity: 0.9;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
    pointer-events: all !important;
    user-select: none !important;
}

/* Drag handle styles */
.draggable .drag-handle {
    position: absolute !important;
    top: 0;
    left: 0;
    right: 0;
    height: 25px;
    background: rgba(50, 50, 70, 0.8);
    cursor: move;
    border-radius: 4px 4px 0 0;
    display: flex;
    align-items: center;
    padding: 0 10px;
    z-index: 10001;
    user-select: none;
    opacity: 0.7;
    transition: opacity 0.2s;
    box-sizing: border-box;
    transform: none !important;
    pointer-events: auto !important;
}

/* Make drag handle more visible on hover/drag */
.draggable:hover .drag-handle,
.draggable.dragging .drag-handle {
    opacity: 1;
}

/* Title in drag handle */
.draggable .drag-handle-title {
    color: white;
    font-size: 14px;
    font-weight: bold;
    margin: 0;
    padding: 0;
    user-select: none;
    pointer-events: none;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
}

/* Content area styles */
.analysis-pane {
    padding: 10px;
    padding-top: 30px !important; /* Space for drag handle */
    color: white;
    overflow: auto;
    min-height: 150px;
    user-select: text;
}

.analysis-pane h3 {
    margin-top: 0;
    color: #72c02c;
    font-size: 16px;
}

/* Fix any elements inside draggable containers */
.draggable * {
    transform: none !important;
}

/* For debugging - highlight layout containers */
.debug-layout .layout-container {
    outline: 2px dashed rgba(255, 0, 0, 0.5);
}

.debug-layout .draggable {
    outline: 2px solid rgba(0, 255, 0, 0.5);
}

/* Styling for the grid-related controls */
.grid-controls-container {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-left: auto;
}

.snap-grid-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 5px 10px;
    font-size: 12px;
    background: #444;
    color: white;
    border: none;
    border-radius: 3px;
    width: auto;
}

.snap-grid-toggle.active {
    background: #72c02c;
}

/* Style for table expand button */
.table-expand-btn {
    background: rgba(70, 70, 90, 0.7);
    border: none;
    border-radius: 3px;
    color: white;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    margin-bottom: 5px;
    font-size: 14px;
}

.table-expand-btn:hover {
    background: rgba(80, 80, 110, 0.9);
}

/* Style for resizable tables */
.resizable-table {
    transition: max-height 0.3s ease;
    overflow-y: auto;
    max-height: 150px;
}

/* Custom layout styles for projection overlay */
.projection-layout.custom-layout {
    position: relative !important;
    width: 100% !important;
    height: 100% !important;
    overflow: visible !important;
    display: block !important; /* Override flex display */
}

/* IMPORTANT: Don't break the structure when in custom layout mode */
.projection-layout.custom-layout .projection-main-area {
    position: relative !important;
    width: 100% !important;
    height: calc(100% - 150px) !important; /* Leave room for controls */
    overflow: visible !important;
    display: block !important; /* Override flex display */
}

/* Override flex layout when in custom layout mode */
.projection-layout.custom-layout .projection-top-row,
.projection-layout.custom-layout .right-section,
.projection-layout.custom-layout .primary-image-col {
    position: static !important;
    width: auto !important;
    height: auto !important;
    flex: none !important;
    display: block !important;
}

/* Make .analysis-pane in custom layout mode have absolute positioning */
.projection-layout.custom-layout .analysis-pane,
.projection-layout.custom-layout .graph-container {
    position: absolute !important;
    margin: 10px !important;
    z-index: 10000;
}

/* Fix resizing issues */
.resize-handle {
    position: absolute;
    width: 12px;
    height: 12px;
    background-color: rgba(255, 255, 255, 0.7);
    border: 1px solid #666;
    z-index: 10002;
    pointer-events: all;
}

.resize-handle.top-left {
    top: 0;
    left: 0;
    cursor: nw-resize;
    border-radius: 4px 0 0 0;
}

.resize-handle.top-right {
    top: 0;
    right: 0;
    cursor: ne-resize;
    border-radius: 0 4px 0 0;
}

.resize-handle.bottom-left {
    bottom: 0;
    left: 0;
    cursor: sw-resize;
    border-radius: 0 0 0 4px;
}

.resize-handle.bottom-right {
    bottom: 0;
    right: 0;
    cursor: se-resize;
    border-radius: 0 0 4px 0;
}

/* Drag handle styles for script.js draggable elements */
.draggable .drag-handle {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(50, 60, 80, 0.9) !important;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
